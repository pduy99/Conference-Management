<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="420.0" style="-fx-background-color: #2A2E37;" stylesheets="@../css/change_password.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="authentification.changePassword.ChangePassword">
    <children>
      <ImageView fitHeight="90.0" fitWidth="90.0" layoutX="164.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../icons/icon_lock.png" />
         </image>
      </ImageView>
      <JFXPasswordField fx:id="tfCurrentPassword" labelFloat="true" layoutX="69.0" layoutY="133.0" prefHeight="34.0" prefWidth="280.0" promptText="Current Password">
         <font>
            <Font size="17.0" />
         </font>
      </JFXPasswordField>
        <JFXPasswordField fx:id="tfNewPassword" labelFloat="true" layoutX="71.0" layoutY="193.0" prefHeight="34.0" prefWidth="280.0" promptText="New Password">
            <font>
                <Font size="17.0" />
            </font>
        </JFXPasswordField>
      <JFXPasswordField fx:id="tfConfirmPassword" labelFloat="true" layoutX="69.0" layoutY="261.0" prefHeight="34.0" prefWidth="280.0" promptText="Confirm Password">
         <font>
            <Font size="17.0" />
         </font>
      </JFXPasswordField>
        <JFXButton fx:id="btnChangePassword" layoutX="71.0" layoutY="333.0" onMouseClicked="#handleChangePassword" prefHeight="40.0" prefWidth="90.0" styleClass="login-button" text="OKAY" />
        <JFXButton fx:id="btnCancel" layoutX="260.0" layoutY="333.0" onMouseClicked="#handleCancelButtonClick" prefHeight="40.0" prefWidth="90.0" styleClass="login-button" text="Cancel" />
    </children>
</AnchorPane>
